{
  "name": "mindblox",
  "version": "0.0.0",
  "description": "A productivity tool to help track time as blocks",
  "type": "module",
  "main": "./app/main.cjs",
  "keywords": [
    "MindBlox",
    "MindBlocks"
  ],
  "author": "Lohit Peesapati <lohit.peesapati@gmail.com>",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx -y only-allow npm",
    "commit": "cz",
    "dev": "NODE_ENV=dev npm run dev:all",
    "dev:all": "concurrently -n=svelte,electron -c='#ff3e00',blue \"npm run dev:svelte\" \"npm run dev:electron\"",
    "dev:svelte": "svelte-kit dev",
    "dev:electron": "electron ./app/main.cjs",
    "dev:ts": "cross-env electron --loader -r ts-node/register ./app/main.mjs",
    "build": "cross-env NODE_ENV=production npm run build:svelte && npm run build:electron",
    "build:svelte": "svelte-kit build",
    "build:electron": "electron-builder -mwl --config build.config.json",
    "start": "svelte-kit start",
    "electron": "concurrently --kill-others \"svelte-kit dev\" \"electron src/electron.cjs\"",
    "test": "jest",
    "preview": "svelte-kit preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore  --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "husky install",
    "chromatic": "chromatic  --exit-zero-on-changes"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/addon-svelte-csf": "^1.1.0",
    "@storybook/svelte": "^6.3.8",
    "@sveltejs/adapter-static": "^1.0.0-next.18",
    "@sveltejs/kit": "next",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/svelte": "^3.0.3",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.9.2",
    "commitizen": "^4.2.4",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "^22.3.21",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "husky": "^7.0.2",
    "jest": "^27.1.1",
    "prettier": "~2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "svelte": "^3.42.4",
    "svelte-check": "^2.0.0",
    "svelte-jester": "^2.1.1",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.0.0",
    "ts-jest": "^27.0.5",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
